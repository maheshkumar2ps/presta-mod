# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=prestashop
DB_USERNAME=root
DB_PASSWORD=root

# JWT Configuration
JWT_SECRET=prestashop-secret-key-for-jwt-authentication-must-be-at-least-256-bits-long-for-security

# Upload Path (legacy local storage - kept for backward compatibility)
